<div class="container-fluid py-5">
    <!-- Hero Section -->
    <header class="hero text-center mb-5">
        <h1 class="display-4">Welcome to ByteBaba</h1>
        <p class="lead">Your partner in IT Consulting, Service Provision, and Product Development</p>
        <a href="#services" class="btn btn-danger btn-lg mt-4 cta-button">Get Started</a>
    </header>

    <!-- Services Section -->
    <section id="services" class="py-5">
        <h2 class="text-center mb-4">Our Services</h2>
        <div class="row text-center">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title">IT Consulting</h3>
                        <p class="card-text">Expert advice to optimize your IT infrastructure and strategy.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title">Service Provision</h3>
                        <p class="card-text">Reliable and efficient IT services tailored to your needs.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title">Product Development</h3>
                        <p class="card-text">Innovative solutions for web, mobile, and desktop applications.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Us Section -->
    <section id="about" class="py-5 bg-light">
        <h2 class="text-center mb-4">About Us</h2>
        <p class="text-center mx-auto" style="max-width: 800px;">
            ByteBaba is a leading provider of IT solutions, offering a wide range of services to help businesses achieve their goals.
            Our team of experts specializes in consulting, service provision, and product development, ensuring that we deliver high-quality solutions tailored to your needs.
        </p>
    </section>

    <!-- Portfolio Section -->
    <section id="portfolio" class="py-5">
        <h2 class="text-center mb-4">Our Work</h2>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="portfolio-item shadow-sm">
                    <img src="/bootstrap/images/plm.png" class="img-fluid" alt="Project 1" style="height: 250px; object-fit: cover;">
                    <div class="p-3">
                        <h4>Product Life Cycle Management</h4>
                        <p>Kmart .NET microservices app managing product lifecycle with Docker and Kafka.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="portfolio-item shadow-sm">
                    <img src="/bootstrap/Images/health.png" class="img-fluid" alt="Project 2" style="height: 250px; object-fit: cover;">
                    <div class="p-3">
                        <h4>Healthcare Industry</h4>
                        <p>Optimizing patient and staff experience with .NET Core, Vue.js, and Kendo UI.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="portfolio-item shadow-sm">
                    <img src="/bootstrap/Images/kmart.jpg" class="img-fluid" alt="Project 3" style="height: 250px; object-fit: cover;">
                    <div class="p-3">
                        <h4>K-Mart Support Project</h4>
                        <p>User-friendly interface to manage orders and accounts using .NET Core and Angular.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5 bg-light">
        <h2 class="text-center mb-4">Contact Us</h2>
        <div class="row">
            <!-- Contact Form -->
            <div class="col-md-4 mb-4">
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" id="name" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message:</label>
                        <textarea id="message" class="form-control" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="col-md-2 mt-4">
                <p><strong>Email:</strong> <a href="mailto:info@bytebaba.com">info@bytebaba.com</a></p>
                <p><strong>Phone:</strong> <a href="tel:+916360633806">+91-6360633806</a></p>
                <p><strong>Address:</strong> Devanahalli, Karnataka, India</p>
                <p><a href="https://wa.me/6360633806" target="_blank" class="btn btn-outline-success">Chat with us on WhatsApp</a></p>
            </div>
            <!-- Google Map -->
            <div class="col-md-6 mt-4">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3883.872648896861!2d77.69575827582555!3d13.233307787106627!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xa9e7a515355b2bad%3A0xca7ea21035a1ebd4!2sByte%20Baba%20LLP!5e0!3m2!1sen!2sin!4v1727205517492!5m2!1sen!2sin" width="90%" height="90%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
