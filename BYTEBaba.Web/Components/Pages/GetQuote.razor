@page "/getquote"

<!-- Get a Quote Page -->
<div class="container-fluid py-5">
    <section id="quote" class="py-5 bg-dark text-light">
        <div class="container">
            <h2 class="text-center mb-4">Got a Project in Mind?</h2>
            <p class="text-center mb-5">Fill out the form and get a free consultation!</p>
            <form>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Your Name</label>
                        <input type="text" id="name" class="form-control" placeholder="e.g. John Parker" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="phone" class="form-label">Your Phone Number</label>
                        <input type="tel" id="phone" class="form-control" placeholder="e.g. +91 (636) o63-3806" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Your E-mail</label>
                        <input type="email" id="email" class="form-control" placeholder="e.g. john.parker@gmail.com" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="company" class="form-label">Company</label>
                        <input type="text" id="company" class="form-control" placeholder="e.g. Byte baba llp.">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">How can we help you?</label>
                    <textarea id="message" class="form-control" rows="4" placeholder="e.g. you are interested in Uber-Like application" required></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <div>
                        <label class="btn btn-outline-light">
                            <input type="file" hidden> Attach file
                        </label>
                    </div>
                    <button type="submit" class="btn btn-warning">Let's Solve It</button>
                </div>
                <p class="mt-3 text-light"><small>By sending this form, I confirm that I have read and accept the <a href="#" class="text-warning">Privacy Policy</a>.</small></p>
            </form>
        </div>
    </section>
</div>

<style>
    .bg-dark {
        background-color: #222 !important;
    }

    form input, form textarea {
        border-radius: 6px;
    }

    .btn-warning {
        background-color: #f39c12;
        color: black;
        border: none;
    }

    .btn-warning:hover {
        background-color: #e67e22;
    }

    .text-warning {
        color: #f39c12 !important;
    }
</style>
